%h2 Sign in

= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  = f.label :email
  = f.email_field :email
  = f.label :password
  = f.password_field :password

  %div
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me

  = f.submit t('sign_in')

= render :partial => "devise/shared/links"